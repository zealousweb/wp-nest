<?xml version="1.0"?>
<ruleset name="CustomRuleset">
  <description>PHP_CodeSniffer config for WP Starter Theme</description>

  <rule ref="PSR12" />

  <!-- Disable the side effects warning -->
  <rule ref="PSR1.Files.SideEffects">
    <severity>0</severity>
  </rule>

  <!-- Disable line length rule -->
  <rule ref="Generic.Files.LineLength">
    <properties>
      <property name="lineLimit" value="250"/>
      <property name="absoluteLineLimit" value="0"/>
    </properties>
  </rule>

  <file>archive.php</file>
  <file>comments.php</file>
  <file>footer.php</file>
  <file>functions.php</file>
  <file>header.php</file>
  <file>index.php</file>
  <file>page.php</file>
  <file>single.php</file>
  <file>404.php</file>

  <file>includes</file>
  <file>template-parts</file>
  <file>templates</file>

  <exclude-pattern>*/vendor/*</exclude-pattern>
  <exclude-pattern>*/node_modules/*</exclude-pattern>
  <exclude-pattern>*/assets/*</exclude-pattern>
</ruleset>
